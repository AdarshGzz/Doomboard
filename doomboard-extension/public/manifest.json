{
    "manifest_version": 3,
    "name": "Doomboard Private Job Tracker",
    "version": "1.0.0",
    "description": "Capture job links instantly and prevent duplicates.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "action": {
        "default_popup": "index.html",
        "default_title": "Doomboard"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "service-worker.js"
    }
}